<div>
  {{#if category}}
    <h2>Обновление категории: Id {{category.id}}</h2>
  {{else}}
    <h2>Добавление новой категории</h2>
  {{/if}}

  <form action="/category{{#if category}}/{{category.id}}/update{{/if}}" method="POST">
    <div class="form-group">
      <label>Название:</label>
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="Выживание"
        {{#if category}}value="{{category.name}}"{{/if}}
        required
      >
    </div>

    <div class="form-group">
      <label>Имя сервера:</label>
      <input
        type="text"
        name="serverName"
        class="form-control"
        placeholder="survival"
        {{#if category}}value="{{category.serverName}}"{{/if}}
        required
      >
    </div>

    <button type="submit">
      Сохранить
    </button>
  </form>
</div>


<style>
  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-control {
    border-radius: 4px;
    padding: 0.75rem;
  }
</style>
<ul id="events"></ul>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script><script>
  const eventList = document.getElementById('events');
  const eventSource = new EventSource('http://localhost:3000/category/sse');

  toastr.options.positionClass = "toast-bottom-right";

  eventSource.onmessage = (e) => {
    toastr.success('Сообщение успешно отправлено!', 'Успех');
  };

  eventSource.onerror = (error) => {
    console.log('EventSource failed:', error);
  };
</script>